<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Notify.views"
    xmlns:local="clr-namespace:Notify"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="TabBar">
    <ShellContent Title="Notes"
                     ContentTemplate="{DataTemplate views:NotesList}" />
        <ShellContent Title="New Notes"
                    ContentTemplate="{DataTemplate views:AddNote}" />

    </TabBar>

</Shell>
